<table>
  <thead>
    <tr>
      <th>
        <a href="/arrecadacoes/1?orderBy=sala" <%if(orderBy == "sala"){%>style="color: yellow;"<% } %> >
        SALA↕</a>
        
      </th>
      <th>TIPO DE ROUPA</th>
      <th>PONTOS (UNITÁRIOS)</th>
      <th>QUANTIDADE</th>
      <th>PONTOS GANHOS</th>
      <th><a href="/arrecadacoes/1?orderBy=data" <%if(orderBy == "data"){%>style="color: yellow;"<% } %>>DATA↕</a></th>
    </tr>
  </thead>
  <tbody>
    <% let qtd_posts = pag*5 %>

    <%- console.log(JSON.stringify(qtd_posts)); %>
    <%- console.log(JSON.stringify(dados.length)); %>

    <% if (dados.length > 5) { %> 
      <% let i = qtd_posts-5; for (i = qtd_posts-5 ; i< qtd_posts; i++) {%>
        <% if (i < dados.length) {%>
        <tr>
          <td><%= dados[i].sigla %></td>
          <td><%= dados[i].Descricao %></td>
          <td><%= dados[i].Pontos %> Pontos</td>
          <td><%= dados[i].qtd %></td>
          <td><%= Number(dados[i].Pontos)*Number(dados[i].qtd) %> Pontos</td>
          <td><%= dados[i].data %></td>
          <% } %>
        </tr>
        </tbody>
        <% } %>
    <tfoot>
      <tr>
          <td colspan="6">
          <% if (pag > 1) {%>
          <a href="/arrecadacoes/<%= Number(pag) - 1 %>?orderBy=<%= orderBy%>">⬅</a>
          <% } %>
          <% if (qtd_posts < dados.length) {%>
          <a href="/arrecadacoes/<%= Number(pag) + 1  %>?orderBy=<%= orderBy%>">⮕</a>
          <% } %>
        </td>
      </tr>
    </tfoot>
    <!-- SE EXISTIREM 5 POSTS OU MENOS -->
  <% } else {%>
  <% let i = 0; for (i = 0; i< dados.length; i++) {%>
    <tr>
      <td><%= dados[i].sigla %></td>
      <td><%= dados[i].Descricao %></td>
      <td><%= dados[i].Pontos %> Pontos</td>
      <td><%= dados[i].qtd %></td>
      <td><%= Number(dados[i].Pontos)*Number(dados[i].qtd) %> Pontos</td>
      <td><%= dados[i].data %></td>
      <% } %>
    </tr>
    </tbody>
  <% } %>
</table>